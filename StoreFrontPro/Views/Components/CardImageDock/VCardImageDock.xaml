<UserControl x:Class="StoreFrontPro.Views.Components.VCardImageDock.VCardImageDock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StoreFrontPro.Views.Components.VCardImageDock"
             mc:Ignorable="d" >
    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
      <Grid.RowDefinitions>
         <RowDefinition Height="*"/>
         <RowDefinition Height="160"/>
      </Grid.RowDefinitions>
      <ContentPresenter Grid.Row="0" Content="{Binding ImageWindow}"/>
      <ContentPresenter Grid.Row="1" Content="{Binding DockWindow}"/>
   </Grid>
</UserControl>
