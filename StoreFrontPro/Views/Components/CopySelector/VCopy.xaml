<UserControl x:Class="StoreFrontPro.Views.Components.CopySelector.VCopy"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StoreFrontPro.Views.Components.CopySelector"
             mc:Ignorable="d" 
             d:DesignHeight="24" d:DesignWidth="164">
   <Grid>
      <Grid.ColumnDefinitions>
         <ColumnDefinition Width="3*"/>
         <ColumnDefinition/>
      </Grid.ColumnDefinitions>
      <Label Content="{Binding Specifier}"/>
      <CheckBox HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Grid.Column="1"
                IsChecked="{Binding Selected}"/>
   </Grid>
</UserControl>
