<UserControl x:Class="CollectorsFrontEnd.Views.ViewCollectionsMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CollectorsFrontEnd.Views"
             mc:Ignorable="d" 
             d:DesignHeight="380" d:DesignWidth="620">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>
        <!-- When there are other things at the highest level that are VM tied, this is the binding needed. -->
        <ContentPresenter 
                Grid.Column="0" 
                Content="{Binding OperationWindow, 
                        RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}},
                        Mode=TwoWay}"/>
        <ListBox 
                ItemsSource="{Binding CollectionPreview}"
                Grid.Column="1"/>
    </Grid>
</UserControl>
