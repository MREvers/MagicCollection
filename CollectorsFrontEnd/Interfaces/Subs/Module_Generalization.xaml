<UserControl x:Class="CollectorsFrontEnd.Interfaces.Subs.Module_Generalization"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CollectorsFrontEnd.Interfaces.Subs"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <ListView x:Name="LVItems" Grid.ZIndex="1" ItemsSource="{Binding LstCardModels}"
                  SelectionChanged="eSelectionChanged">
            <ListView.View>
                <GridView x:Name="GVColumns">
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</UserControl>
