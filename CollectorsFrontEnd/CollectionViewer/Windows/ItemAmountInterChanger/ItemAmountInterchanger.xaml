<UserControl x:Class="CollectorsFrontEnd.ItemAmountInterchanger"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CollectorsFrontEnd"
             mc:Ignorable="d" 
             Height="186" Width="190">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Label x:Name="LblCardName"
               HorizontalContentAlignment="Center" 
                 VerticalContentAlignment="Center"
               FontSize="16"></Label>
        <StackPanel x:Name="SPCollections" Grid.Row="1">
            <ItemsControl>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <local:AmountInterchanger/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
    </Grid>
</UserControl>
